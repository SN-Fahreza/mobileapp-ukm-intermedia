<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UpdateActivity">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE DATA"
                android:textColor="@color/abu"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/new_nim"
                android:textColor="@color/abu"
                android:textColorHint="@color/abu"
                android:backgroundTint="@color/abu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="NIM Baru"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:inputType="textPersonName"/>
            <EditText
                android:id="@+id/new_nama"
                android:textColor="@color/abu"
                android:textColorHint="@color/abu"
                android:backgroundTint="@color/abu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nama Baru"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:inputType="textPersonName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Divisi"
                android:textColor="@color/abu"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"/>
            <RadioGroup
                android:id="@+id/new_rg_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/new_rb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:textColor="@color/abu"/>
                <RadioButton
                    android:id="@+id/new_rb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="MM"
                    android:textColor="@color/abu"/>
                <RadioButton
                    android:id="@+id/new_rb3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="NS"
                    android:textColor="@color/abu"/>
            </RadioGroup>

            <Spinner
                android:id="@+id/new_spinner_pert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_200"
                android:layout_marginTop="10dp"
                android:entries="@array/pertemuan_array"/>
            <EditText
                android:id="@+id/new_tanggal"
                android:textColor="@color/abu"
                android:textColorHint="@color/abu"
                android:backgroundTint="@color/abu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Tanggal Baru"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:inputType="date"/>
            <EditText
                android:id="@+id/new_saran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Saran Baru"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:inputType="textLongMessage"
                android:textColor="@color/abu"
                android:textColorHint="@color/abu"
                android:backgroundTint="@color/abu"/>
            <EditText
                android:id="@+id/new_nohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="No HP Baru"
                android:textColor="@color/abu"
                android:textColorHint="@color/abu"
                android:backgroundTint="@color/abu"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:inputType="number"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/newlihat_foto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_photo" />

                <Button
                    android:id="@+id/newuploadfoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:text="Upload"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple_700"
                android:text="Update"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>